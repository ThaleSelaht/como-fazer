<%- include('../header') %>
  <form action="/publicacoes/nova" method="POST">
    <div class="form-group">
      <label for="titulo">Título</label>
      <input type="text" class="form-control" id="titulo" name="titulo" aria-describedby="emailHelp" placeholder="Digite o título">
    </div>  
    <div class="form-group">
      <label for="categoria">Categorias</label>
      <select id="categoria" name="categoria" aria-describedby="emailHelp" class="form-control">
        <% categorias.forEach( categoria => { %>
          <option value="<%= categoria.id %>"><%= categoria.categoria %></option>
        <% }) %>   
      </select>
    </div>
    <div class="form-group">
      <label for="conteudo">Conteúdo</label>
      <textarea type="text" class="form-control" id="conteudo" name="conteudo" aria-describedby="emailHelp" placeholder="Digite o conteúdo">
      </textarea>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
  </form>
<%- include('../footer') %>